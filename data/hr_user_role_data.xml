<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- HR Manager Role -->
        <record id="role_hr_manager" model="hr.user.role">
            <field name="name">HR Manager</field>
            <field name="sequence">10</field>
            <field name="description">Full access to HR module including employee management, recruitment, attendance, payroll, etc.</field>
            <field name="color">3</field>
        </record>
        
        <record id="role_hr_manager_groups" model="hr.user.role">
            <field name="id" ref="role_hr_manager"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('hr.group_hr_manager'),
                ref('hr_attendance.group_hr_attendance'),
                ref('hr_holidays.group_hr_holidays_user'),
                ref('hr_recruitment.group_hr_recruitment_user'),
            ])]"/>
        </record>

        <!-- Accountant Role -->
        <record id="role_accountant" model="hr.user.role">
            <field name="name">Accountant</field>
            <field name="sequence">20</field>
            <field name="description">Full access to accounting module including invoicing, payments, journal entries, reports, etc.</field>
            <field name="color">5</field>
        </record>
        
        <record id="role_accountant_groups" model="hr.user.role">
            <field name="id" ref="role_accountant"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('account.group_account_user'),
                ref('account.group_account_invoice'),
            ])]"/>
        </record>

        <!-- Sales Manager Role -->
        <record id="role_sales_manager" model="hr.user.role">
            <field name="name">Sales Manager</field>
            <field name="sequence">30</field>
            <field name="description">Full access to sales module including quotes, orders, customers, and sales reports.</field>
            <field name="color">2</field>
        </record>
        
        <record id="role_sales_manager_groups" model="hr.user.role">
            <field name="id" ref="role_sales_manager"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('sales_team.group_sale_manager'),
                ref('crm.group_use_lead'),
            ])]"/>
        </record>

        <!-- Inventory Manager Role -->
        <record id="role_inventory_manager" model="hr.user.role">
            <field name="name">Inventory Manager</field>
            <field name="sequence">40</field>
            <field name="description">Full access to inventory module including stock movements, warehouses, and inventory reports.</field>
            <field name="color">4</field>
        </record>
        
        <record id="role_inventory_manager_groups" model="hr.user.role">
            <field name="id" ref="role_inventory_manager"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('stock.group_stock_manager'),
            ])]"/>
        </record>

        <!-- Purchase Manager Role -->
        <record id="role_purchase_manager" model="hr.user.role">
            <field name="name">Purchase Manager</field>
            <field name="sequence">50</field>
            <field name="description">Full access to purchase module including purchase orders, vendors, and purchase reports.</field>
            <field name="color">6</field>
        </record>
        
        <record id="role_purchase_manager_groups" model="hr.user.role">
            <field name="id" ref="role_purchase_manager"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
                ref('purchase.group_purchase_manager'),
            ])]"/>
        </record>

        <!-- Basic Employee Role -->
        <record id="role_basic_employee" model="hr.user.role">
            <field name="name">Basic Employee</field>
            <field name="sequence">100</field>
            <field name="description">Basic employee access with minimal permissions.</field>
            <field name="color">1</field>
        </record>
        
        <record id="role_basic_employee_groups" model="hr.user.role">
            <field name="id" ref="role_basic_employee"/>
            <field name="groups_id" eval="[(6, 0, [
                ref('base.group_user'),
            ])]"/>
        </record>

    </data>
</odoo>