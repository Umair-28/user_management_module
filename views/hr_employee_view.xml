<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_employee_form_inherit_create_user" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.create.user</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_create_user']" position="before">
                <button
                    string="Create User (Password)"
                    type="object"
                    name="action_open_create_user_wizard"
                    class="btn btn-link"
                    invisible="user_id"
                />
            </xpath>
        </field>
    </record>
</odoo>