<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_create_user_wizard" model="ir.ui.view">
        <field name="name">hr.create.user.wizard.form</field>
        <field name="model">hr.create.user.wizard</field>
        <field name="arch" type="xml">
            <form string="Create/Update User">
                <field name="is_update_mode" invisible="1"/>
                <field name="existing_user_id" invisible="1"/>
                
                <group>
                    <field name="employee_id"/>
                    <field name="login" placeholder="e.g., user@company.com" required="1"/>
                    <field name="password" password="True" 
                           placeholder="Leave blank to keep existing password"
                           invisible="is_update_mode"
                           required="not is_update_mode"/>
                    <field name="confirm_password" password="True" 
                           invisible="is_update_mode"
                           required="not is_update_mode"/>
                    
                    <!-- Show password fields optionally in update mode -->
                    <!-- <group invisible="not is_update_mode" string="Change Password (Optional)">
                        <field name="password" password="True" 
                               placeholder="Leave blank to keep existing password"
                               nolabel="1"/>
                        <field name="confirm_password" password="True" 
                               placeholder="Confirm new password"
                               nolabel="1"/>
                    </group> -->
                </group>
                
                <group string="Role Selection">
                    <field name="user_role_ids" widget="many2many_checkboxes"/>
                </group>
                
                <group string="Access Rights (Auto-assigned based on role)">
                    <field name="groups_id" widget="many2many_tags" nolabel="1"/>
                </group>
                
                <footer>
                    <button
                        string="Create User"
                        type="object"
                        name="action_create_user"
                        class="btn-primary"
                        invisible="is_update_mode"/>
                    <button
                        string="Update User"
                        type="object"
                        name="action_create_user"
                        class="btn-primary"
                        invisible="not is_update_mode"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
